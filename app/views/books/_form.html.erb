  <% if student_signed_in? %>
  <%= render "home/header" %>
  <% end %>
  <% if admin_signed_in?%>
  <%= render "home/header1"%>
  <% end%>
<%= form_with(model: book) do |form| %>
  <% if book.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(book.errors.count, "error") %> The book cannot be saved:</h2>

      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :BookId, style: "display: block" %>
    <%= form.text_field :bookid %>
  </div>

  <div>
    <%= form.label :Book_name, style: "display: block" %>
    <%= form.text_field :bookname %>
  </div>

  <div>
    <%= form.label :Author, style: "display: block" %>
    <%= form.text_field :author %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>