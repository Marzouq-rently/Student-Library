
<%= form_with(model: book) do |form| %>
  <% if book.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(book.errors.count, "error") %> The book cannot be saved:</h2>

      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div>
    <%= form.label :Book_name, style: "display: block" %>
    <%= form.text_field :bookname, autofocus: true, :required => 'required' %>
  </div>
<div>
    <%= form.label :Description, style: "display: block" %>
    <%= form.text_area :description, autofocus: true, :required => 'required' %>
  </div>
  <div>
  <div>
    <%= form.label :Author, style: "display: block" %>
    <%= form.text_field :author, autofocus: true, :required => 'required' %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>