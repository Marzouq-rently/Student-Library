<table class="table  table-striped table-hover">
  <thead class="table-dark">
    <tr>
       <th scope="col">student_id</th>
       <th scope="col">student email</th>
    <th scope="col">bookid</th>
    <th scope="col">Book name</th>
    <th scope="col">Author</th>
      <th scope="col">Borrowed at</th>
        <th scope="col">Returned at</th>
    <th scope="col">Status</th>
   
          </tr>
         
    <div id="books">
    <% if @stbohis!=nil%>
      <% @stbohis.each do |stbohis| %>
   <tbody>
      <% if stbohis.student_id==@sid%>
    <tr>
    <td><%= stbohis.student_id%></td>
    <% stud=Student.find(stbohis.student_id)%>
<th scope="row"><%= stud.email %></th>
<td><%= stbohis.book_id %></td>
<% bok=Book.find(stbohis.book_id)%>
<td><%= bok.bookname %></td>
<td><%= bok.author %></td>
 <td><%= stbohis.created_at%></td>
 <%if stbohis.returned=="Returned" %>
 <td><%= stbohis.updated_at%></td>
  <td><%= stbohis.returned %> </td>
 <% else%>
 <td>-</td>
  <td>Borrowed</td>
 <%end%>
</tr>
<% end %>
<% end %>
</tbody>
<% end %>

<% if @strehis!=nil%>
 <% @strehis.each do |strehis| %>
 <tbody>
   <tr>
   <% if strehis.student_id==@sid%>
      <% if strehis.status=="Reserved"%>
          <td><%= strehis.student_id%></td>
          <% stud=Student.find(strehis.student_id)%>
          <th scope="row"><%= stud.email %></th>
          <td><%= strehis.book_id %></td>
          <% bok=Book.find(strehis.book_id)%>
          <td><%= bok.bookname %></td>
          <td><%= bok.author %></td>
          <td>-</td>
          <td>-</td>
          <td>Reserved</td>
      <%else%>
    <tr></tr>
<%end%>
</tr>
<%end%>
<% end %>
</tbody>
<% end %>

</div>

  </thead>
  
  </table>
  <%= link_to "BACK", :back, class:"btn btn-secondary"%>